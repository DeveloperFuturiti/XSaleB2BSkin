    {% if  UseLimits == true %}
    <div class="row">
        <div class="col-lg-12">
            <span> Suma: </span>
            <span class="font-bold">{{SumAmount}} {{CurrencyTypeName}}</span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <span> Dostępny limit: </span>
            <span class="font-bold {% if  Available == 0 %} text-danger {% endif %}">{{Available}} {{CurrencyTypeName}}</span>
        </div>
    </div>
    {% endif %}
    <div class="row">
        <div class="col-lg-12">
            <span> Netto: </span>
            <span class="font-bold">{{SumAmountDisplay}} {{CurrencyTypeName}}</span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <span> Transport: </span>
            <span class="font-bold">{{DeliveryCost}} {{CurrencyTypeName}} netto</span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <span> Miejsce powstania kosztu: </span>
            <span class="font-bold">{{CostCenter}}</span>
        </div>
    </div>
    <div class="row">
        <div  class="col-lg-6">
            <h2> Łącznie </h2>
        </div>
        <div class="col-lg-6 text-right">
            <h2>{{TotalAmountDisplay}} {{CurrencyTypeName}} netto</h2>
        </div>
    </div>
    <div class="row">
    <div class="col-lg-12">
        <span class="help-block m-b-none text-danger" style="{% if ShowMinimalAmountAlert == false %} display:none; {% endif %}"><i class="fa fa-exclamation-circle"></i> Minimalna wartość zamówienia {{MinimalAmount}} {{CurrencyTypeName}}</span>
    </div>
</div>
