<div class="wrapper wrapper-content animated fadeInRight">
    <div class="col-lg-12">
        <div class="ibox product-detail border-left-right border-bottom">
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-4">
                        <div class="product-images" style="display:none">
                            {% for imageId in Article.Image_ids %}
                            <div>
                                <div class="product-image-box">
                                    <img class="image" alt="Zdjęcie" {% if imageId == null %} src="/Content/Assets/altArticleImage.png" {% else %} src="{{ResAddress}}Res/Img?o={{CurrentDbId}}&b={{imageId}}" {% endif %}>                                    
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="m-b-lg" >
                            <div class="pull-left">
                                <h3 class="font-bold m-b-xs">
                                    {{Article.Name}}
                                </h3>
                                <small class="text-muted">{{article.Code}}</small>
                            </div>
                            <div id="rating-widget" class="pull-right rating-widget" data-offerid="{{Article.Offer_id}}" data-loadratingurl="/Article/LoadOfferRating" data-rateofferurl="/Article/RateOffer">
                                <dl class="dl-horizontal small m-t-none small">
                                        <dt>
                                            <span style="float:right">Ocena:</span>
                                        </dt>
                                        <dd class="stars-inactive">
                                            <span style="font-size:16px;">
                                                <i class="fa fa-star-o" data-starnumber="1"></i>
                                                <i class="fa fa-star-o" data-starnumber="2"></i>
                                                <i class="fa fa-star-o" data-starnumber="3"></i>
                                                <i class="fa fa-star-o" data-starnumber="4"></i> <!--fa fa-star-half-o-->
                                                <i class="fa fa-star-o" data-starnumber="5"></i>
                                                <span class="average">0 (0)</span>
                                            </span>
                                        </dd>
                                    <dt>
                                        <span style="float:right">Moja ocena:</span>
                                    </dt>
                                    <dd class="stars-interactive">
                                        <span style="font-size:16px;">
                                            <i class="fa fa-star-o" data-starnumber="1"></i>
                                            <i class="fa fa-star-o" data-starnumber="2"></i>
                                            <i class="fa fa-star-o" data-starnumber="3"></i>
                                            <i class="fa fa-star-o" data-starnumber="4"></i> <!--fa fa-star-half-o-->
                                            <i class="fa fa-star-o" data-starnumber="5"></i>
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                            <script type="text/javascript">
                                $('#rating-widget').rateWidget();
                            </script>
                        </div>
                        <br />
                        <small class="font-bold">{{Article.Variant}}</small>
                        <div class="m-t-md">
                            <!--<button class="btn btn-primary pull-right">Add to cart</button>-->
                            <div>
                                <div class="btn-group pull-right add-to-cart-container">
                                    <button class="btn btn-white " title="Dostępne"> {{Article.Quantitydisplay}} </button>
                                    <div class="btn btn-white  order-quantity-container">
                                        <input class="quantity add-to-cart-quantity" type="text" name="orderQuantity" placeholder="1" title="Ilość">
                                    </div>
                                    <button class="btn btn-white">{% if article.Unit != null %} {{article.Unit}} {% else %} szt. {% endif %}</button>
                                    <button class="btn btn-primary add-to-cart" data-articleid="{{Id}}" data-unit-rounding="{{article.Unitrounding}}"><i class="fa fa-cart-plus"></i> Do koszyka</button>
                                    {% if Article.Quantity == 0 %}
                                    <button class="btn btn-warning add-notification" onclick="ArticleNotification({{Article.Id}})" title="Powiadom o dostępności"><i class="fa fa-comment"></i></button>
                                    {% endif %}
                                </div>
                            </div>
                            <h1 class="product-main-price asynchronous-price-label" data-id="{{article.Id}}" data-offerid="{{article.Offer_id}}" data-postfix=" netto"><!-- data-offerid atrybut opcjonalny, optymalizacja wydajności-->
                                -
                                <small class="text-muted"></small>
                            </h1>
                            <h3 class="product-main-price asynchronous-price-label gross" data-id="{{article.Id}}" data-offerid="{{article.Offer_id}}" data-postfix=" brutto">
                                <!-- data-offerid atrybut opcjonalny, optymalizacja wydajności-->
                                -
                                <small class="text-muted"></small>
                            </h3>
                        </div>
                        <h4>{{Tags}}</h4>
                        <!--<div class="text-right">
                            <div class="btn-group">
                                <button class="btn btn-white btn-sm"><i class="fa fa-star"></i> Add to wishlist </button>
                                <button class="btn btn-white btn-sm"><i class="fa fa-envelope"></i> Contact with author </button>
                            </div>
                        </div>-->
                        {% if  MultipleVariants %}                                                
                            <hr>
                            <h3 class="text-center">Warianty</h3>
                            <div class="slick-variants m-r-md m-l-md" style="display:none">
                                {% for block in VariantBlocks %}
                                <div>
                                    <div class="products-min varianst">
                                        <div class="col-lg-12 no-padding">
                                            <div class="row">
                                                {% for article in block %}
                                                <div class="col-lg-3">
                                                    <div class="file-box" style="width:100%;">
                                                        <div class="file no-margins" style="width:100%;">
                                                            <a title="{{article.Name}}" href="/Towar/{{article.Id}}">
                                                                <div class="image">
                                                                    <img alt="{{article.Name}}" class="product-min-image" {% if article.Image_id == null %} src="/Content/Assets/altArticleImage.png" {% else %} src="{{ResAddress}}Res/Img?o={{CurrentDbId}}&b={{article.Image_id}}&type=thumbnail1" {% endif %}>
                                                                </div>
                                                                <div class="file-name truncate">
                                                                    {{article.Name}}
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <hr>
                    <h3>Opis produktu</h3>
                    <div class="small text-muted description">
                        {{Article.Description}}
                    </div>
                </div>
                <div class="row">
                    <!--<hr>-->
                    <dl class="dl-horizontal attributes small">
                        {% for attribute in Attributes %}
                        <dt>{{attribute.Name}}</dt>
                        <dd>{{attribute.Value}}</dd>
                        {% endfor %}
                    </dl>
                </div>
                <div class="row">
