            </div>-->
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.product-images').slick({
            dots: true
        });
        $('.slick-variants').slick({
            dots: true
        });
        $('.slick-replacements').slick({
            dots: true
        });
        $('.slick-popular').slick({
            dots: true
        });
        $('.slick-variants, .product-images, .slick-popular, .slick-replacements').show();
        //$(window).trigger('resize');
    });
</script>
